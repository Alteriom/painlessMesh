{
  "name": "@alteriom/painlessmesh",
  "version": "1.7.7",
  "description": "painlessMesh is a user-friendly library for creating mesh networks with ESP8266 and ESP32 devices. This Alteriom fork includes additional packages for sensor data (SensorPackage), device commands (CommandPackage), and status monitoring (StatusPackage). It handles routing and network management automatically, so you can focus on your application. The library uses JSON-based messaging and syncs time across all nodes, making it ideal for coordinated behaviour like synchronized light displays or sensor networks reporting to a central node.",
  "keywords": [
    "arduino",
    "mesh",
    "esp32",
    "esp8266",
    "embedded",
    "iot",
    "wireless",
    "alteriom",
    "sensor",
    "painlessmesh",
    "mcp-server",
    "github-copilot",
    "json",
    "time-sync",
    "mesh-networking"
  ],
  "author": {
    "name": "Coopdis",
    "url": "https://github.com/Coopdis"
  },
  "maintainers": [
    {
      "name": "Alteriom",
      "url": "https://github.com/Alteriom"
    }
  ],
  "license": "LGPL-3.0",
  "homepage": "https://github.com/Alteriom/painlessMesh",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Alteriom/painlessMesh.git"
  },
  "bugs": {
    "url": "https://github.com/Alteriom/painlessMesh/issues"
  },
  "devDependencies": {
    "@alteriom/mqtt-schema": "^0.5.0",
    "@eslint/js": "^9.0.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "prettier": "^3.0.0"
  },
  "scripts": {
    "test": "run-parts --regex catch_ bin/ || echo 'Tests completed'",
    "dev:build": "cmake -G Ninja . && ninja",
    "dev:prebuild": "git submodule update --init",
    "validate-library": "./scripts/validate-release.sh",
    "prepublishOnly": "npm run validate-library",
    "postpublish": "echo 'Package published successfully to NPM!'"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "config": {
    "arduino": {
      "library": true,
      "platforms": [
        "arduino",
        "esp32",
        "esp8266"
      ]
    }
  },
  "directories": {
    "example": "examples",
    "test": "test",
    "doc": "docs"
  },
  "files": [
    "src/",
    "examples/",
    "docs/",
    "library.properties",
    "library.json",
    "keywords.txt",
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "RELEASE_GUIDE.md"
  ]
}
